{
    "version": "0.1.0",
    "configurations": [
      {
        "name": "Debug Electron App",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
        "args" : ["."],
        "outputCapture": "std",
        "preLaunchTask": "npm: build",
        "env": {
          "NODE_ENV": "development"
        }
      },
      {
        "name": "Debug Electron App without webpack",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
        "args" : ["."],
        "outputCapture": "std",
        "preLaunchTask": "npm: build:no-pack",
        "env": {
          "NODE_ENV": "development"
        }
      },
      {
        "name": "Debug Electron App without Build",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
        "args" : ["."],
        "outputCapture": "std",
        "env": {
          "NODE_ENV": "development"
        }
      }
    ]
  }
  